<div class="d-flex justify-content-center shadow-sm p-2 mb-5 bg-white rounded">
  <div class="col-8">
    <h2 class="card-title p-2 text-center">
      Your weather
    </h2>
    <div class="card shadow-sm mb-3 bg-light">
      <h2 class="card-title p-2 text-center">
        Forecast
      </h2>
      <div class="card-body">
        <div id="forecast">
          <%= render "forecast", forecast: @forecast %>
        </div>
      </div>
    </div>
    <div class="card shadow-sm mb-3 bg-light">
      <h2 class="card-title p-2 text-center">
        Enter Your Address
      </h2>
      <div class="card-body justify-content-between">
        <div>
          <%= render "address_form", address: @address %>
        </div>
      </div>
    </div>
  </div>
</div>
